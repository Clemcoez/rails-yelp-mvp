<h1>Add a new restaurant</h1>

<div class="p-5">
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Choose a category" %>
  <%= f.submit %>
<% end %>
</div>
