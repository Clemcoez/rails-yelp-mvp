<div class="p-4">
  <div class ="m-4">
    <h1><%= @restaurant.name  %></h1>
    <p> <strong> Category : <%= @restaurant.category %> </strong> </p>
    <p>Address : <%= @restaurant.address %></p>
  </div>
  <div class ="m-4">
    <h3>Tell us about your experience :</h3>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection:["0", "1", "2", "3", "4", "5"] %>
      <%= f.submit %>
    <% end %>
  </div>
  <div class ="m-4">
    <h3>Reviews :</h3>
    <ul><% @restaurant.reviews.each do |review| %>
          <li><%= review.content %> - <%= review.rating %></li>
        <% end %>
    </ul>
  </div>

  <p class ="m-4"><%= link_to "Back to list", restaurants_path %></p>
</div>
